<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuildingCompanyMobileApp.Views.Projects.ProjectDetailsPage"
             Title="Project Details">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Small"/>
        <Label Text="{Binding Name}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Cost:" FontSize="Small" />
        <Label Text="{Binding Cost}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Stage:" FontSize="Small" />
        <Label Text="{Binding Stage}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Type:" FontSize="Small" />
        <Label Text="{Binding Type}" FontSize="Medium" TextColor="Black"/>

        <Label Text="Employees:" FontSize="Small" Margin="0, 20, 0, 0" />

        <ListView ItemsSource="{Binding Employees}" BackgroundColor="AliceBlue" />
    </StackLayout>
</ContentPage>