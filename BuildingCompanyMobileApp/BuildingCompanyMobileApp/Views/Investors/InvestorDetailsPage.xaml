<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuildingCompanyMobileApp.Views.Investors.InvestorDetailsPage"
             Title="Investors Details">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Small" />
        <Label Text="{Binding Name}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Surname:" FontSize="Small" />
        <Label Text="{Binding Surname}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Passport code:" FontSize="Small" />
        <Label Text="{Binding PassportNo}" FontSize="Medium" TextColor="Black"/>
    </StackLayout>
</ContentPage>