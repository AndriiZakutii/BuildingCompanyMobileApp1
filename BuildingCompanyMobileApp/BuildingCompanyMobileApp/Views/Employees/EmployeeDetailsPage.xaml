<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuildingCompanyMobileApp.Views.Employees.EmployeeDetailsPage"
             Title="Employee Details">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Small" />
        <Label Text="{Binding Name}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Surname:" FontSize="Small" />
        <Label Text="{Binding Surname}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Salary:" FontSize="Small" />
        <Label Text="{Binding Salary}" FontSize="Medium" TextColor="Black"/>
        <Label Text="Position:" FontSize="Small" />
        <Label Text="{Binding Position}" FontSize="Medium" TextColor="Black"/>

        <Label Text="Projects:" FontSize="Small" Margin="0, 20, 0, 0"/>

        <ListView ItemsSource="{Binding Projects}"/>
    </StackLayout>
</ContentPage>